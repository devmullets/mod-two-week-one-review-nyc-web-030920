<div class="container">
    <div class="text-center">
        <img src="<%=@sea.image_url%>" class="img-fluid" style="width: 40vw">
        <h2 ><%=@sea.name %></h2>
        <p ><%=@sea.bio%></p>
        <%= link_to "Edit", edit_sea_path, :class => "btn btn-info"%>
        <%= link_to "Back", seas_path, :class => "btn btn-info" %>
        <p></p>
        
        <div>
            <ul class="list-group-item">
                Temperature: <%=@sea.temperature%> F
            </ul>
            <ul class="list-group-item">
                Favorite Color: <%=@sea.favorite_color%>
            </ul>
            <ul class="list-group-item">
                Scariest Creature: <%=@sea.scariest_creature%>
            </ul>
            <ul class="list-group-item">
                Mood: <%=@sea.mood%>
            </ul>
           <% if @sea.has_mermaids%>
                <ul class="list-group-item">
                    Has mermaids    
                </ul>
            <% end %>
        </div>
        <table>
        </table>
    
    </div>

</div>